@model Car


<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt=""/>

    <h2>Model: @Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Category: @Model.Category.categoryName</p>
    <p>Price: @Model.price.ToString("C")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Add to cart</a></p>
</div>