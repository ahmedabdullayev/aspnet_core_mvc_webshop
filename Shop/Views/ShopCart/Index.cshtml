@model ShopCartViewModel

<div class="container">
    @foreach (var el in Model.shopCart.ListShopCartItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Car: </b> @el.car.name <br/>
            <b>Price: </b> @el.car.price.ToString("C") <br/>
        </div>
    }
    <hr/>
    <div class="btn btn-danger" asp-controller="Order">Pay</div>
</div>